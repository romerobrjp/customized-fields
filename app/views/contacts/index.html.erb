<div class="row">
  <div class="text-center">
    <p id="notice"><%= notice %></p>

    <h1>Listing Contacts</h1>

    <br />

    <%= link_to 'New Contact', new_contact_path, class: 'btn btn-success' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td>
          <%= link_to 'Show', contact, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
